@model IEnumerable<EmployeeDepartmentProject.Models.Employee>
@{
    ViewData["Title"] = "Index";
}
<partial name="_AlertPartial" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List <i class="bi bi-person-lines-fill small"></i></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square-fill">Create</i></a>

        </div>
    </div>
</div>
