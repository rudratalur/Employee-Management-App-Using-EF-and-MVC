<table class="table table-bordered table-striped style="width:100%">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Employee Salary
            </th>
            <th>
                Department Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@c.EmployeeId">@c.EmployeeId</a></td>
                <td>@c.EmployeeName</td>
                <td>@c.EmployeeSalary</td>
                <td>@c.Departments.DepartName</td>
                <td>
                    <div class="btnbtn-group m-75" role="group">
                        <a asp-controller="Employee" asp-action="Edit" asp-route-employeeId="@c.EmployeeId" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@c.EmployeeId" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>

</table>




