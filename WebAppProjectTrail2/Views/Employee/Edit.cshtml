@model EmployeeDepartmentProject.Models.Employee
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Employee list</h2>
            <div class="text-danger" asp-validation-summary="All"></div>

        </div>
         <div class="mb-3">
            <label asp-for="EmployeeId"></label>
            <input asp-for="EmployeeId"  readonly class="form-control" />
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmployeeName" ></label>
            <input asp-for="EmployeeName" class="form-control" />
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmployeeSalary"></label>
            <input asp-for="EmployeeSalary" class="form-control" />
            <span asp-validation-for="EmployeeSalary" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DepartID" class="form-label mt-4">Department Name</label>
            <select asp-for="DepartID" asp-items="ViewBag.Department" type="number" class="form-control" id="exampleInputPassword1"></select>
            <span asp-validation-for="DepartID" class="text-danger"></span>
        </div>
        <button class="btn btn-primary">Update</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-danger">Back</a>
    </div>
</form>
