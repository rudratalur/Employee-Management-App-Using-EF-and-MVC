@model EmployeeDepartmentProject.Models.Department
@{
    ViewData["Title"] = "Edit Department";
}



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Department</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="DepartID" ></label>
            <input asp-for="DepartID" readonly class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DepartName"></label>
            <input asp-for="DepartName" class="form-control" />
        </div>
       <button type="submit" class="btn btn-primary" style="width:100px">Submit</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
